<UserControl x:Class="UndeadEarth.Silverlight.SafeHouseUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Background="Transparent">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Image x:Name="imageSafeHouse" Width="30" Height="30" Grid.Row="0" Grid.Column="0" Cursor="Hand" MouseEnter="imageSafeHouse_MouseEnter" HorizontalAlignment="Left" VerticalAlignment="Top" MouseLeftButtonDown="imageSafeHouse_MouseLeftButtonDown" ToolTipService.ToolTip="Click to move here to visit the safe house."/>
    </StackPanel>
</UserControl>
