<UserControl x:Class="UndeadEarth.Silverlight.ZombiePackUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Background="Transparent">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Image x:Name="imageHotZone" Width="40" Height="40" Grid.Row="0" Grid.Column="0" Cursor="Hand" MouseEnter="ImageHotZone_MouseEnter" HorizontalAlignment="Left" VerticalAlignment="Top" MouseLeftButtonDown="imageHotZone_MouseLeftButtonDown" ToolTipService.ToolTip="Click here to move and hunt for zombies." />
    </StackPanel>
</UserControl>
