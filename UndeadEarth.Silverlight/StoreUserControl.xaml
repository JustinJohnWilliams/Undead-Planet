<UserControl x:Class="UndeadEarth.Silverlight.StoreUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Background="Transparent">
    <StackPanel Orientation="Horizontal" Background="Transparent">
        <Image x:Name="imageStore" Width="40" Height="40" Grid.Row="0" Grid.Column="0" Cursor="Hand" MouseEnter="imageStore_MouseEnter" HorizontalAlignment="Left" VerticalAlignment="Top" MouseLeftButtonDown="imageStore_MouseLeftButtonDown" ToolTipService.ToolTip="Click to move here and shop for items to help you with hunting."/>
    </StackPanel>
</UserControl>
